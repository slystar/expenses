= form_for(@expense) do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2
        = pluralize(@expense.errors.count, "error")
        prohibited this expense from being saved:
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :date_purchased
    %br/
    = f.date_select :date_purchased
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :pay_method_id
    %br/
    = f.number_field :pay_method_id
  .field
    = f.label :reason_id
    %br/
    = f.number_field :reason_id
  .field
    = f.label :store_id
    %br/
    = f.number_field :store_id
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :group_id
    %br/
    = f.number_field :group_id
  .field
    = f.label :amount
    %br/
    = f.text_field :amount
  .field
    = f.label :process_date
    %br/
    = f.date_select :process_date
  .field
    = f.label :process_flag
    %br/
    = f.check_box :process_flag
  .actions
    = f.submit
