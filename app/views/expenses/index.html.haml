%h1 Listing expenses
%table
  %tr
    %th Date purchased
    %th Description
    %th Pay method
    %th Reason
    %th Store
    %th User
    %th Group
    %th Amount
    %th Process date
    %th Process flag
    %th
    %th
    %th
  - @expenses.each do |expense|
    %tr
      %td= expense.date_purchased
      %td= expense.description
      %td= expense.pay_method_id
      %td= expense.reason_id
      %td= expense.store_id
      %td= expense.user_id
      %td= expense.group_id
      %td= expense.amount
      %td= expense.process_date
      %td= expense.process_flag
      %td= link_to 'Show', expense
      %td= link_to 'Edit', edit_expense_path(expense)
      %td= link_to 'Destroy', expense, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Expense', new_expense_path
