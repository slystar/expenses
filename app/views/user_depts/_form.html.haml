= form_for @user_dept do |f|
  - if @user_dept.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_dept.errors.count, "error")} prohibited this user_dept from being saved:"
      %ul
        - @user_dept.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :from_user_id
    = f.number_field :from_user_id
  .field
    = f.label :to_user_id
    = f.number_field :to_user_id
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
