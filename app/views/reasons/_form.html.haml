= form_for @reason do |f|
  -if @reason.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reason.errors.count, "error")} prohibited this reason from being saved:"
      %ul
        - @reason.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
%hr
%h2
  Existing Pay Methods:
  %ul
    - @reasons.each do |p|
      %li
        = p.name

